.container
  .row
    .col
      %table.table
        %thead
          %th= ''
          %th= 'Title'
          %th= 'Description'
          %th= 'Actions'
        %tbody
          - @posts.each_with_index do |post, index|
            %tr
              %td= index + 1
              %td= post.title
              %td= post.text
              %td
                .actions
                  = link_to 'Show', post
                  = link_to 'Edit', edit_post_path(post)
                  = link_to 'Destroy', post, method: :delete,
                                             data: { confirm: 'Are you sure?' }
  .row
    = link_to 'New post', new_post_path
