.container
  .row
    .col
      %table.table
        %thead
          %th= ''
          %th= 'Title'
          %th= 'Description'
          %th= 'Actions'
        %tbody
          - @posts.each_with_index do |post, index|
            %tr
              %td= index + 1
              %td= post.title
              %td= post.text
              %td
                .actions
                  = link_to 'Show', post
