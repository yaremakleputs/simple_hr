<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-6 card">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'text-center border border-light p-5') do |f| %>

        <p class="h4 mb-4">Sign in</p>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-4', placeholder: "E-mail" %>

        <%= f.password_field :password, autocomplete: "off", class: 'form-control mb-4', placeholder: "Password" %>


        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <%= f.submit 'Sign in', class: 'btn btn-info btn-block my-4' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
